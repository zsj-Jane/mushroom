<!--pages/search/search.wxml-->
<view class="search-container">
	<view class="search-head">
		<input bindfocus="onFocus" value="{{keyword}}" bindinput="changeValue" class="search-input" placeholder="请输入课程名称" type="text"></input>
		<icon class="icon-search" type="search" size="15"></icon>
		<text bindtap="cancel" hidden="{{!isFocus}}" class="search-button">取消</text>
	</view>
	<view class="search-body">
		<view class="empty">
			<text class="title">暂无内容哦~</text>
		</view>
    
	</view>
</view>